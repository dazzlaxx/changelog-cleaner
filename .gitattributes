# ======================
# НАСТРОЙКИ КОНЦОВ СТРОК
# ======================


*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.ps1 text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# ======================
# ДИФФИРОВАНИЕ
# ======================


*.pdf diff=astextplain
*.doc diff=astextplain
*.docx diff=astextplain

# Кастомные diff драйверы
[attr]diff-json text diff=json
*.json diff=json

[attr]diff-xml text diff=xml
*.xml diff=xml

# ======================
# ЯЗЫКИ ПРОГРАММИРОВАНИЯ
# ======================

# Python
*.py diff=python
*.py linguist-language=Python

# JavaScript/TypeScript
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript

# Java
*.java linguist-language=Java

# C#
*.cs linguist-language=C#

# Go
*.go linguist-language=Go

# Rust
*.rs linguist-language=Rust

# PHP
*.php linguist-language=PHP

# Ruby
*.rb linguist-language=Ruby

# Swift
*.swift linguist-language=Swift

# Kotlin
*.kt linguist-language=Kotlin
